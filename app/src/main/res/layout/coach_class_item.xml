<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SetItem_allLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 左邊圖片 -->
            <ImageView
                android:id="@+id/Class_Item_imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="課程圖片"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/null_class" />

            <!-- 右邊的文字區域 -->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Class_Item_imageView"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/Class_Item_nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="課程名稱"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_all_class_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="課程費用"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_all_class_coachname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上課人數"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_all_class_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="課程時間長度"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    </LinearLayout>
