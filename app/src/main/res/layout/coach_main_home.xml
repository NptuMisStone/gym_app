<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coach.Main.CoachHome">


    <TextView
        android:id="@+id/CoachHome_nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Coach_welcome"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/CoachHome_photoImage"
        app:layout_constraintEnd_toStartOf="@+id/CoachHome_photoImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CoachHome_photoImage" />

    <ImageView
        android:id="@+id/CoachHome_photoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/main_login_shape_edittext"
        android:backgroundTint="@android:color/darker_gray"
        android:contentDescription="ShowCoachImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CoachHome_nameText"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/CoachHome_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CoachHome_photoImage">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CoachHome_constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/CoachHome_viewPager"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toTopOf="@+id/CoachHome_guideline1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/CoachHome_guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.41" />


                <Button
                    android:id="@+id/CoachHome_addButton"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:onClick="onClick"
                    android:text="新增課表"
                    app:layout_constraintEnd_toStartOf="@+id/CoachHome_checkButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/CoachHome_guideline1" />

                <Button
                    android:id="@+id/CoachHome_checkButton"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="我的課表"
                    app:layout_constraintBottom_toBottomOf="@+id/CoachHome_addButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/CoachHome_addButton"
                    app:layout_constraintTop_toTopOf="@+id/CoachHome_addButton" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/CoachHome_guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp" />

                <Button
                    android:id="@+id/CoachHome_decideButton"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    android:onClick="onClick"
                    android:text="管理預約"
                    app:layout_constraintEnd_toStartOf="@+id/CoachHome_historyButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CoachHome_addButton" />

                <Button
                    android:id="@+id/CoachHome_historyButton"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="歷史預約"
                    app:layout_constraintBottom_toBottomOf="@+id/CoachHome_decideButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/CoachHome_decideButton"
                    app:layout_constraintTop_toTopOf="@+id/CoachHome_decideButton"
                    app:layout_constraintVertical_bias="1.0" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp" />

                <Button
                    android:id="@+id/CoachHome_workButton"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    android:onClick="onClick"
                    android:text="我的成果"
                    app:layout_constraintEnd_toStartOf="@+id/CoachHome_contactButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CoachHome_decideButton" />

                <Button
                    android:id="@+id/CoachHome_contactButton"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="問題反饋"
                    app:layout_constraintBottom_toBottomOf="@+id/CoachHome_workButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/CoachHome_workButton"
                    app:layout_constraintTop_toTopOf="@+id/CoachHome_workButton" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>