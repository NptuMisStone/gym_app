    </androidx.viewpager2.widget.ViewPager2>-->


    <!--<com.google.android.gms.ads.AdView
        android:id="@+id/UserHome_adView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:adSize="FULL_BANNER"
