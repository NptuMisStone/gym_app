<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.NPTUMisStone.mapview.ClassMap">

    <ImageButton
        android:id="@+id/Navigation_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/all_effect_ripple"
        android:contentDescription="@string/goBack"
        android:scaleType="centerCrop"
        android:src="@drawable/all_ic_arrow_back1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mapbox.maps.MapView
        android:id="@+id/Navigation_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Navigation_leftButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/user_and_coach_contact_ic_left"
        android:backgroundTint="@color/dark_black"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@+id/Navigation_floatingActionButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Navigation_rightButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/user_and_coach_contact_ic_right"
        android:backgroundTint="@color/dark_black"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/Navigation_floatingActionButton"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Navigation_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_my_location_24" />

</androidx.constraintlayout.widget.ConstraintLayout>